@model List<TodoItem>

@{
    ViewData["Title"] = "کارهای من";
}
<style>
    .bg-light-success { background-color: #d4edda; }
    .bg-light-primary { background-color: #d1ecf1; }
    .bg-light-danger { background-color: #f8d7da; }
</style>
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>کارهای من</h2>
        <a asp-action="Create" asp-route-userId="@Model.FirstOrDefault()?.UserId" class="btn btn-success">➕ کار جدید</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            هنوز کاری ثبت نکرده‌اید!
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var todo in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card @(todo.status == ToDoStatus.Completed ? "border-success" :
                                                               todo.status == ToDoStatus.Overdue ? "border-danger" : "border-primary")">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="card-title @(todo.IsCompleted ? "text-decoration-line-through text-muted" : "")">
                                        @todo.Title
                                    </h5>
                                 
                                    @if (todo.DueDate.HasValue)
                                    {
                                        <small class="text-muted">📅 تا @todo.DueDate.Value.ToString("yyyy/MM/dd")</small>
                                    }
                                </div>
                                <span class="badge bg-secondary">@todo.Category?.Title</span>
                                <br>
                                <span class="badge @(todo.status == ToDoStatus.Completed ? "bg-success" :
                                                                                          todo.status == ToDoStatus.Overdue ? "bg-danger" : "bg-primary") mt-1">
                                    @(todo.status == ToDoStatus.Completed ? "انجام شده" :
                                                                todo.status == ToDoStatus.Overdue ? "عقب افتاده" : "در انتظار")
                        </span>
                            </div>

                            <div class="d-flex gap-2 mt-3">
                                <form asp-action="ToggleComplete" method="post">
                                    <input type="hidden" name="id" value="@todo.Id" />
                                    <input type="hidden" name="userId" value="@todo.UserId" />
                                    <button type="submit" class="btn btn-sm @(todo.IsCompleted ? "btn-danger" : "btn-success")">
                                        @(todo.IsCompleted ? " انجام نشده:(" : " انجام شد")
                                    </button>
                                </form>

                                <form asp-action="Delete" method="post" onsubmit="return confirm('آیا از حذف این کار مطمئن هستید؟')">
                                    <input type="hidden" name="id" value="@todo.Id" />
                                    <input type="hidden" name="userId" value="@todo.UserId" />
                                    <button type="submit" class="btn btn-sm btn-danger">🗑️ حذف</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>