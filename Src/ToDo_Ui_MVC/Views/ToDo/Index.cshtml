@model List<TodoItem>

@{
    ViewData["Title"] = "کارهای من";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>کارهای من</h2>
        <a asp-action="Create" asp-route-userId="@Model.FirstOrDefault()?.UserId" class="btn btn-success">➕ کار جدید</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            هنوز کاری ثبت نکرده‌اید!
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var todo in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card @(todo.IsCompleted ? "border-success" : "border-warning")">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="card-title @(todo.IsCompleted ? "text-decoration-line-through text-muted" : "")">
                                        @todo.Title
                                    </h5>
                                 
                                    @if (todo.DueDate.HasValue)
                                    {
                                        <small class="text-muted">📅 تا @todo.DueDate.Value.ToString("yyyy/MM/dd")</small>
                                    }
                                </div>
                                <span class="badge bg-secondary">@todo.Category?.Title</span>
                            </div>

                            <div class="d-flex gap-2 mt-3">
                                <form asp-action="ToggleComplete" method="post">
                                    <input type="hidden" name="id" value="@todo.Id" />
                                    <input type="hidden" name="userId" value="@todo.UserId" />
                                    <button type="submit" class="btn btn-sm @(todo.IsCompleted ? "btn-danger" : "btn-success")">
                                        @(todo.IsCompleted ? " انجام نشده:(" : " انجام شد")
                                    </button>
                                </form>

                                <form asp-action="Delete" method="post" onsubmit="return confirm('آیا از حذف این کار مطمئن هستید؟')">
                                    <input type="hidden" name="id" value="@todo.Id" />
                                    <input type="hidden" name="userId" value="@todo.UserId" />
                                    <button type="submit" class="btn btn-sm btn-danger">🗑️ حذف</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>