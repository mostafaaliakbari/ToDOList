@model TodoItem

@{
    ViewData["Title"] = "ایجاد کار جدید";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h4>ایجاد کار جدید</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                       
                        <input type="hidden" name="userId" value="@ViewBag.UserId" />

                        <!-- دسته‌بندی -->
                        <div class="mb-3">
                            <label class="form-label">دسته‌بندی</label>
                            <select asp-for="CategoryId" class="form-control" required>
                                <option value="">-- لطفاً دسته‌بندی انتخاب کنید --</option>
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <option value="@category.Id">@category.Title</option>
                                }
                            </select>
                        </div>

                        <!-- عنوان -->
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">عنوان کار</label>
                            <input asp-for="Title" class="form-control" placeholder="مثلاً: مطالعه دیتا استراکچر" required />
                        </div>

                        <!-- تاریخ انجام -->
                        <div class="mb-3">
                            <label asp-for="DueDate" class="form-label">تاریخ انجام (اختیاری)</label>
                            <input asp-for="DueDate" type="datetime-local" class="form-control" />
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success flex-fill">💾 ایجاد کار</button>
                            <a asp-action="Index" asp-route-userId="@ViewBag.UserId" class="btn btn-outline-secondary">↶ بازگشت</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>